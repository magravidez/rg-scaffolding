{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/css/(.*)",
      "dest": "/public/css/$1"
    },
    {
      "src": "/js/(.*)",
      "dest": "/public/js/$1"
    },
    {
      "src": "/images/(.*)",
      "dest": "/public/images/$1"
    },
    {
      "src": "/",
      "dest": "/server.js"
    },
    {
      "src": "/shop",
      "dest": "/server.js"
    },
    {
      "src": "/cart",
      "dest": "/server.js"
    },
    {
      "src": "/checkout",
      "dest": "/server.js"
    },
    {
      "src": "/customer-login",
      "dest": "/server.js"
    },
    {
      "src": "/my-orders",
      "dest": "/server.js"
    },
    {
      "src": "/owner-login",
      "dest": "/server.js"
    },
    {
      "src": "/owner-dashboard",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ]
} 